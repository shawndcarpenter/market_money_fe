<table class="table" style="max-width: 60rem;">
  <thead class="thead-dark">
    <tr class="tr">
      <th class="th1">Name</th>
      <th class="th1">City</th>
      <th class="th1">State</th>
      <th class="th1">Link</th>
    </tr>
  </thead>

  <tbody>
    <% @markets.each do |market| %>
      <div id="market-<%= market.id %>">
        <tr class="tr">
          <td style="text-align:left"><b><%= market.name %></b></td>
          <td style="text-align:left"><%= market.city %></td>
          <td style="text-align:left"><%= market.state %></td>
          <td style="text-align:left"><%= button_to "More Info", "/markets/#{market.id}", method: :get %></td>
        </tr>
      </div>
    <% end %>
  </tbody>
</table>